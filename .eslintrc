{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "module": true,
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "jest": true
  },
  "plugins": [
    "babel"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "rules": {
      "no-console": "warn",
      "indent": ["error", 2, { "SwitchCase": 1 }],
      "quotes": ["error", "single"],
      "semi": ["error", "always"],
      "space-in-parens": ["error"],
      "space-infix-ops": "error",
      "object-curly-spacing": ["error", "always"],
      "comma-spacing": "error",
      "space-before-function-paren": ["error", "never"],
      "keyword-spacing": [
        "error", 
        { 
          "before": true, 
          "after": true,
          "overrides": {
            "if": { "after": false },
            "for": { "after": false },
            "while": { "after": false },
            "do": { "after": false },
            "catch": { "after": false }
          } 
        }
      ],
      "array-bracket-spacing": "error",
      "babel/object-curly-spacing": ["error", "always"],
      "babel/no-invalid-this": 1,
      "babel/semi": 1
  }
}